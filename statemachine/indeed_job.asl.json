{
    "Comment": "Search, download and parse job postings from Indeed",
    "StartAt": "SearchJob",
    "States": {
        "SearchJob": {
            "Type": "Task",
            "Resource": "${IndeedSearcherFunctionArn}",
            "TimeoutSeconds": 30,
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 1,
                    "MaxAttempts": 5,
                    "BackoffRate": 2.0
                }
            ],
            "Next": "DownloadAndParseJobs"
        },
        "DownloadAndParseJobs": {
            "Type": "Map",
            "ItemsPath": "$.job_postings",
            "MaxConcurrency": 1,
            "Iterator": {
                "StartAt": "DownloadJob",
                "States": {
                    "DownloadJob": {
                        "Type": "Task",
                        "Resource": "${IndeedDownloaderFunctionArn}",
                        "TimeoutSeconds": 30,
                        "Retry": [
                            {
                                "ErrorEquals": [
                                    "States.TaskFailed"
                                ],
                                "IntervalSeconds": 1,
                                "MaxAttempts": 5,
                                "BackoffRate": 2.0
                            }
                        ],
                        "Next": "ParseJob"
                    },
                    "ParseJob": {
                        "Type": "Task",
                        "Resource": "${IndeedJobParserFunctionArn}",
                        "TimeoutSeconds": 30,
                        "Retry": [
                            {
                                "ErrorEquals": [
                                    "States.TaskFailed"
                                ],
                                "IntervalSeconds": 1,
                                "MaxAttempts": 5,
                                "BackoffRate": 2.0
                            }
                        ],
                        "End": true
                    }
                }
            },
            "End": true
        }
    }
}